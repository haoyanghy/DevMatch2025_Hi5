{
  "compilerOptions": {
    "target": "es2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./artifacts",
    "resolveJsonModule": true,
    "types": ["node", "hardhat"]
  },
  "include": [
    "hardhat.config.ts",
    "scripts/**/*.ts",
    "contracts/**/*.sol"
  ],
  "exclude": ["node_modules"]
}